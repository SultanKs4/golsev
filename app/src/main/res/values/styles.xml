    <style name="txtLightGreen">
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/green_200</item>
    </style>

    <style name="txtGreen">
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/txtGreen</item>
